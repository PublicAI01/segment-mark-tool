{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "lib": ["esnext", "dom", "DOM.Iterable"],
  },
  "include": [
    "./src/**/*",
    "./src/**/*.js",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}